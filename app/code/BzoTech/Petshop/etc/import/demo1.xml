                <copyright_group>
                    <custom_copyright>1</custom_copyright>
                    <copyright_content>Petshop &#xA9; 2022 Demo Store. All Rights Reserved</copyright_content>
                </copyright_group>
                <developer_group>
                    <enable_custom_css>0</enable_custom_css>
                    <custom_css/>
