                </image_box_group>
                <related_upsell_group>
                    <margin>30</margin>
                    <autoplay>0</autoplay>
                    <loop>0</loop>
                    <nav>1</nav>
                    <dots>0</dots>
                    <mousedrag>1</mousedrag>
                    <touchdrag>1</touchdrag>
                    <screen_0>1</screen_0>
                    <screen_1>2</screen_1>
                    <screen_2>3</screen_2>
