<?xml version="1.0"?>
<root>
    <config>
        <web>
            <default>
                <cms_home_page>home-demo-1</cms_home_page>
            </default>
        </web>
        <ajaxcart>
            <general>
                <isenabled>1</isenabled>
                <select_type>both</select_type>
                <label_button>Quick View</label_button>
                <countdown_number>5</countdown_number>
                <element_links>.product-add-form #product_addtocart_form, .action.view, .action.add, .cats-list a
                </element_links>
            </general>
        </ajaxcart>
        <ajaxsearch>
            <general>
                <enable>1</enable>
                <enable_search_term>1</enable_search_term>
                <term_limit>15</term_limit>
                <trending_product_ids>54,55,56,57,58</trending_product_ids>
                <product_limit>5</product_limit>
            </general>
        </ajaxsearch>
        <categories>
            <all_categories>
                <sub_limit>5</sub_limit>
                <display_parent_image>1</display_parent_image>
                <display_product_count>1</display_product_count>
            </all_categories>
            <category_page>
                <display_subcats>0</display_subcats>
                <cat_display_child_image>1</cat_display_child_image>
                <cat_display_product_count>0</cat_display_product_count>
            </category_page>
        </categories>
        <megamenu>
            <primary_secondary_menu>
                <megamenu_type>horizontal</megamenu_type>
                <primary_cfg>
                    <vertical_title>Shop by Department</vertical_title>
                    <vertical_limit>9</vertical_limit>
                    <text_style>style-capitalize</text_style>
                    <text_weight>style-normal</text_weight>
                    <item_center>0</item_center>
                </primary_cfg>
                <secondary_cfg>
                    <text_weight_secondary>style-normal</text_weight_secondary>
                    <item_center_secondary>0</item_center_secondary>
                </secondary_cfg>
            </primary_secondary_menu>
            <secondary_menu>
                <menu_items>[]</menu_items>
            </secondary_menu>
            <how_to>
                <empty_field_hidden_cus/>
            </how_to>
        </megamenu>
        <petshop>
            <theme_layout>
                <direction_rtl>0</direction_rtl>
                <layout_header>
                    <header_style>header-1</header_style>
                </layout_header>
                <layout_footer>
                    <footer_style>footer-1</footer_style>
                </layout_footer>
                <layout_product>
                    <product_style>product-1</product_style>
                </layout_product>
            </theme_layout>
            <theme_info>
                <empty_field_hidden_cus/>
            </theme_info>
            <theme_install>
                <overwrite_blocks>1</overwrite_blocks>
                <overwrite_pages>1</overwrite_pages>
            </theme_install>
        </petshop>
        <popupcontent>
            <pc_general>
                <enable_popupcontent>1</enable_popupcontent>
                <popup_max_width>630</popup_max_width>
                <popup_delay>5000</popup_delay>
                <shown_home_only>0</shown_home_only>
                <show_again>0</show_again>
                <transparent_background>1</transparent_background>
                <enable_popup_content>1</enable_popup_content>
            </pc_general>
            <pc_content>
                <content>&lt;div class="newsletter-popup-container"&gt;&#xD;
                    &lt;div class="popup-image"&gt;&lt;img src="{{media url=&amp;quot;wysiwyg/newsletter-popup/image-popup-newsletter.jpg&amp;quot;}}"
                    alt="Newsletter" width="630" height="306"&gt;&lt;/div&gt;&#xD;
                    &lt;div class="popup-info"&gt;&#xD;
                    &lt;div class="popup-title"&gt;Subscribe To Our Newsletter!&lt;/div&gt;&#xD;
                    &lt;div class="popup-description"&gt;Subscribe to the newsletter to stay up to date with the latest
                    news and most useful&lt;/div&gt;&#xD;
                    {{widget type="BzoTech\PopupContent\Block\Widget\SubscribeWidget"}}&lt;/div&gt;&#xD;
                    &lt;/div&gt;
                </content>
            </pc_content>
        </popupcontent>
        <popuplogin>
            <general>
                <enable>1</enable>
                <popup_logo/>
                <redirect>current</redirect>
                <custom_page/>
                <popup_type>modal</popup_type>
            </general>
        </popuplogin>
        <producttabs>
            <general>
                <isactive>1</isactive>
                <title>Product Tabs Title</title>
                <type_show>slider</type_show>
                <type_listing>all</type_listing>
                <under_price>100</under_price>
                <display_countdown>0</display_countdown>
            </general>
            <source_options>
                <type_filter>categories</type_filter>
                <field_tabs/>
                <category_tabs/>
                <category_select/>
                <order_by>entity_id</order_by>
                <order_dir>DESC</order_dir>
                <limitation>8</limitation>
            </source_options>
            <tab_slider>
                <margin>30</margin>
                <autoplay>0</autoplay>
                <loop>0</loop>
                <nav>1</nav>
                <dots>0</dots>
                <mousedrag>1</mousedrag>
                <touchdrag>1</touchdrag>
                <screen_0>2</screen_0>
                <screen_1>2</screen_1>
                <screen_2>3</screen_2>
                <screen_3>4</screen_3>
                <screen_4>4</screen_4>
                <screen_5>4</screen_5>
                <screen_6>4</screen_6>
                <screen_7>4</screen_7>
            </tab_slider>
        </producttabs>
        <themecore>
            <general>
                <primary_color>
                    <theme_color>ED6436</theme_color>
                    <text_on_theme_color>FFFFFF</text_on_theme_color>
                    <link_on_theme_color>FFFFFF</link_on_theme_color>
                    <linkhover_on_theme_color>FFFFFF</linkhover_on_theme_color>
                </primary_color>
                <bodyfont_group>
                    <body_font>google_font</body_font>
                    <body_googlefont_link>&lt;link
                        href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&amp;display=swap"
                        rel="stylesheet"&gt;
                    </body_googlefont_link>
                    <body_googlefont_family>font-family: 'Outfit', sans-serif;</body_googlefont_family>
                    <body_googlefont_weight>400</body_googlefont_weight>
                    <font_size>14px</font_size>
                    <body_link_color>222222</body_link_color>
                    <body_link_hover_color>ED6436</body_link_hover_color>
                    <body_text_color>777777</body_text_color>
                </bodyfont_group>
                <background_group>
                    <body_background_color>FFFFFF</body_background_color>
                    <use_background_image>0</use_background_image>
                    <body_background_image/>
                    <background_repeat>repeat</background_repeat>
                    <background_position>left top</background_position>
                </background_group>
                <element_googlefont_group>
                    <use_element_googlefont>0</use_element_googlefont>
                    <element_googlefont_link/>
                    <element_googlefont_family/>
                    <element_googlefont_weight/>
                    <google_font_targets/>
                </element_googlefont_group>
                <navigation_group>
                    <menu_ontop>0</menu_ontop>
                    <sticky_menu>0</sticky_menu>
                </navigation_group>
                <mobile_layout>
                    <mobile_break_point>1024</mobile_break_point>
                    <logo_mobile>default/logo-mobile.png</logo_mobile>
                    <logomobile_width>154</logomobile_width>
                    <logomobile_height>36</logomobile_height>
                </mobile_layout>
            </general>
            <theme_layout>
                <max_width>1290px</max_width>
            </theme_layout>
            <product_listing>
                <category_one_column>
                    <one_column_1921>4</one_column_1921>
                    <one_column_1681_1920>4</one_column_1681_1920>
                    <one_column_1441_1680>4</one_column_1441_1680>
                    <one_column_1200_1440>4</one_column_1200_1440>
                    <one_column_992_1199>3</one_column_992_1199>
                    <one_column_768_991>3</one_column_768_991>
                    <one_column_481_767>2</one_column_481_767>
                    <one_column_0_480>2</one_column_0_480>
                </category_one_column>
                <category_two_column>
                    <two_column_1921>3</two_column_1921>
                    <two_column_1681_1920>3</two_column_1681_1920>
                    <two_column_1441_1680>3</two_column_1441_1680>
                    <two_column_1200_1440>3</two_column_1200_1440>
                    <two_column_992_1199>4</two_column_992_1199>
                    <two_column_768_991>3</two_column_768_991>
                    <two_column_481_767>2</two_column_481_767>
                    <two_column_0_480>2</two_column_0_480>
                </category_two_column>
                <category_three_column>
                    <three_column_1921>2</three_column_1921>
                    <three_column_1681_1920>2</three_column_1681_1920>
                    <three_column_1441_1680>2</three_column_1441_1680>
                    <three_column_1200_1440>2</three_column_1200_1440>
                    <three_column_992_1199>2</three_column_992_1199>
                    <three_column_768_991>2</three_column_768_991>
                    <three_column_481_767>2</three_column_481_767>
                    <three_column_0_480>2</three_column_0_480>
                </category_three_column>
                <listing_background_color>FFFFFF</listing_background_color>
            </product_listing>
            <product_detail>
                <image_box_group>
                    <thumbs_style>horizontal</thumbs_style>
                    <image_loop>1</image_loop>
                    <image_keyboard>1</image_keyboard>
                    <image_navigation>1</image_navigation>
                    <image_fullscreen>1</image_fullscreen>
                    <thumbs_width>98</thumbs_width>
                    <thumbs_height>98</thumbs_height>
