                <lazyload_group>
                    <enable_ladyloading>1</enable_ladyloading>
                    <enable_page_ladyloading>0</enable_page_ladyloading>
                    <page_loading_icon>default/cup-loading.gif</page_loading_icon>
                </lazyload_group>
            </advanced>
            <home_page>
                <home_background_color>FFFFFF</home_background_color>
                <show_dropdown_vertical_menu>0</show_dropdown_vertical_menu>
            </home_page>
        </themecore>
