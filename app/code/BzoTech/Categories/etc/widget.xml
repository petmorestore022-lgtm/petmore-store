    <widget id="bzotech_grid_categories" class="BzoTech\Categories\Block\Widget\Categories" is_email_compatible="true"
            placeholder_image="Magento_Catalog::images/product_widget_new.png">
        <label translate="true">BZOTech - Categories Grid</label>
        <description translate="true">List of Categories</description>
        <parameters>
            <parameter name="widget_style" xsi:type="select" visible="true">
                <label translate="true">Style</label>
                <options>
                    <option name="widget_style" value="grid"
                            selected="true">
