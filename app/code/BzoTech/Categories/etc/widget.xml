                    <option name="parent_image_true" value="true"
                            selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="parent_image_false" value="false">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="sub_limit" xsi:type="text" required="true" visible="true">
                <label translate="true">Subcategories Limit</label>
                <value>5</value>
            </parameter>

            <parameter name="display_product_count" xsi:type="select" visible="true">
                <label translate="true">Display Product Count</label>
                <options>
                    <option name="display_product_true" value="true"
                            selected="true">
                        <label translate="true">Yes</label>
                    </option>
                    <option name="display_product_false" value="false">
                        <label translate="true">No</label>
                    </option>
                </options>
            </parameter>

            <parameter name="custom_template" xsi:type="text" visible="true">
                <label translate="true">Custom Template</label>
                <description translate="true">
                    <![CDATA[Ex: widget/custom-grid.phtml. Note: This field is recommended for developers only]]>
                </description>
            </parameter>
        </parameters>
    </widget>

