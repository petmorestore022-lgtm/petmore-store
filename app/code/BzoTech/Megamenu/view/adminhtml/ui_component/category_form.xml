                    <item name="label" translate="true" xsi:type="string">Column Right Width(%)</item>
                    <item name="notice" xsi:type="string" translate="true">Ex: 28</item>
                </item>
            </argument>

            <settings>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>